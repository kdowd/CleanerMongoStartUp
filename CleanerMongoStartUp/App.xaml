<Application x:Class="CleanerMongoStartUp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CleanerMongoStartUp"
             StartupUri="MainWindow.xaml"
>
    
    <Application.Resources>
        <FontFamily x:Key="PrataRegular">pack://application:,,,/Fonts/Prata-Regular.ttf#Prata</FontFamily>
   
        
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrataRegular}" />
        </Style>

        <Style TargetType="Page">
            <Setter Property="FontFamily" Value="{StaticResource PrataRegular}" />
        </Style>

        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="{StaticResource PrataRegular}" />
        </Style>

    </Application.Resources>
    
</Application>
